                Grid.Row="5"
                Grid.Column="0"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="5"
                Grid.Column="1"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="5"
                Grid.Column="2"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="5"
                Grid.Column="3"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="5"
                Grid.Column="5"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="5"
                Grid.Column="6"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="5"
                Grid.Column="7"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />

            <!--  7th row of ellipses  -->
            <Ellipse
                Grid.Row="6"
                Grid.Column="0"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="6"
                Grid.Column="1"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="6"
                Grid.Column="2"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="6"
                Grid.Column="3"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="6"
                Grid.Column="4"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="6"
                Grid.Column="5"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="6"
                Grid.Column="6"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="6"
                Grid.Column="7"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />

            <!--  8th row of ellipses  -->
