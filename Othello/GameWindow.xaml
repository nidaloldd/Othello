                Grid.Row="4"
                Grid.Column="5"
                Width="50"
                Height="50"
                Loaded="ClearDisks_Loaded"
                StrokeThickness="1" />
        </Grid>
        <Grid
            Height="50"
            VerticalAlignment="Top"
            Background="#303030">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--  menu button  -->
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Arial"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Time elapsed:" />
                <TextBlock
                    x:Name="elapsedTime"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Arial"
                    FontSize="18"
                    Foreground="White"
                    Text="00:00"
                    Loaded="Timer_Loaded" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <Border
                    Margin="20,0,0,0"
                    Background="#202020"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="10">
                    <Button
                        x:Name="passButton"
                        Width="60"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Click="Pass_Click"
                        Content="Pass"
                        FontFamily="Arial"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource MyButton}" />
                </Border>
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <Border
                    Margin="0,0,20,0"
                    Background="#202020"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="10">
                    <Button
                        x:Name="backToMenu"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Click="BackToMenu_Click"
                        Content="Quit to Menu"
                        FontFamily="Arial"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource MyButton}" />
                </Border>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
