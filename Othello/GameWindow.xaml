                StrokeThickness="1" />
            <Ellipse
                Grid.Row="3"
                Grid.Column="2"
                Width="50"
                Height="50"
                Loaded="ClearDisks_Loaded"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="5"
                Grid.Column="4"
                Width="50"
                Height="50"
                Loaded="ClearDisks_Loaded"
                StrokeThickness="1" />
