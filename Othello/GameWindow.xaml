                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="7"
                Grid.Column="5"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="7"
                Grid.Column="6"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="7"
                Grid.Column="7"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />

            <!--  default(starting position) ellipses  -->
            <Ellipse
                Grid.Row="3"
                Grid.Column="3"
                Width="50"
                Height="50"
                Loaded="WhiteDisks_Loaded"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="4"
                Grid.Column="4"
                Width="50"
                Height="50"
                Loaded="WhiteDisks_Loaded"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="3"
                Grid.Column="4"
                Width="50"
                Height="50"
                Loaded="BlackDisks_Loaded"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="4"
                Grid.Column="3"
                Width="50"
                Height="50"
                Loaded="BlackDisks_Loaded"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="2"
                Grid.Column="3"
                Width="50"
                Height="50"
