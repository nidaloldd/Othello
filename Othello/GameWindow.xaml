                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="0"
                Grid.Column="6"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="0"
                Grid.Column="7"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />

            <!--  2nd row of ellipses  -->
            <Ellipse
                Grid.Row="1"
                Grid.Column="0"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="1"
                Grid.Column="1"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="1"
