                Grid.Row="7"
                Grid.Column="0"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
            <Ellipse
                Grid.Row="7"
                Grid.Column="1"
                Width="50"
                Height="50"
                Fill="{Binding FillColor}"
                Stroke="{Binding StrokeColor}"
                StrokeThickness="1" />
